@{
    ViewData["Title"] = "İletişim";
}
<div class="contact-hero">
    <h1>İletişim</h1>
    <p>Bizimle iletişime geçmek için formu doldurun veya aşağıdaki bilgilerden ulaşın.</p>
</div>
<div class="contact-container">
    <div class="contact-form-section">
        <form class="contact-form" autocomplete="off">
            <div class="form-group">
                <label for="name">Adınız</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="Adınız" />
            </div>
            <div class="form-group">
                <label for="email">E-posta</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="E-posta adresiniz" />
            </div>
            <div class="form-group">
                <label for="message">Mesajınız</label>
                <textarea id="message" name="message" class="form-control" rows="5" placeholder="Mesajınızı yazınız..."></textarea>
            </div>
            <button type="button" class="btn btn-danger btn-block">Gönder</button>
        </form>
    </div>
    <div class="contact-info-section">
        <h3>Showroom Bilgileri</h3>
        <ul>
            <li><strong>Adres:</strong> 1234 Carizma Cad., İstanbul</li>
            <li><strong>Telefon:</strong> +90 555 123 45 67</li>
            <li><strong>E-posta:</strong> info@carizma.com</li>
        </ul>
        <div class="contact-map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3011.8167961563645!2d28.829339576830254!3d40.98549232082648!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14caa3c34bae1ca7%3A0xa3ba77557c2ae636!2sSoftITo%20Yaz%C4%B1l%C4%B1m%20-%20Bili%C5%9Fim%20Akademisi%20(%C4%B0stanbul%20Ticaret%20Odas%C4%B1)!5e0!3m2!1str!2str!4v1751274529101!5m2!1str!2str"  width="100%" height="200" style="border:0; border-radius: 12px;" allowfullscreen="" loading="lazy"></iframe>        </div>
      
    </div>
</div>
@section Styles {
    <style>
        .contact-hero {
            background: rgba(30, 30, 30, 0.95);
            color: #fff;
            padding: 48px 0 24px 0;
            text-align: center;
            border-radius: 0 0 32px 32px;
            margin-bottom: 32px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        }
        .contact-container {
            display: flex;
            flex-wrap: wrap;
            gap: 32px;
            justify-content: center;
            background: rgba(20,20,20,0.85);
            border-radius: 24px;
            padding: 32px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.2);
        }
        .contact-form-section, .contact-info-section {
            flex: 1 1 320px;
            min-width: 320px;
            max-width: 480px;
        }
        .contact-form {
            background: rgba(40,40,40,0.95);
            padding: 24px;
            border-radius: 16px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.15);
        }
        .form-group label {
            color: #fff;
            font-weight: 600;
        }
        .form-control {
            background: #181818;
            color: #fff;
            border: 1px solid #b71c1c;
            border-radius: 8px;
            margin-bottom: 12px;
        }
        .form-control:focus {
            border-color: #ff1744;
            box-shadow: 0 0 0 2px #ff174455;
        }
        .btn-danger {
            background: linear-gradient(90deg, #b71c1c 0%, #ff1744 100%);
            border: none;
            font-weight: bold;
            letter-spacing: 1px;
            border-radius: 8px;
            padding: 12px 0;
            transition: background 0.2s;
        }
        .btn-danger:hover {
            background: linear-gradient(90deg, #ff1744 0%, #b71c1c 100%);
        }
        .contact-info-section {
            background: rgba(30,30,30,0.95);
            border-radius: 16px;
            padding: 24px;
            color: #fff;
            box-shadow: 0 2px 12px rgba(0,0,0,0.12);
        }
        .contact-info-section h3 {
            color: #ff1744;
            margin-bottom: 16px;
        }
        .contact-info-section ul {
            list-style: none;
            padding: 0;
            margin-bottom: 16px;
        }
        .contact-info-section li {
            margin-bottom: 8px;
        }
        .contact-map {
            margin-top: 16px;
        }
        @@media (max-width: 900px) {
            .contact-container {
                flex-direction: column;
                padding: 16px;
            }
        }
    </style>
} 